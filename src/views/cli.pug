doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title U-pad
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        style.
            form#screen {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100%;
                margin: 0;
                padding: 0;
            }
            video#myFace {
                margin: 0;
                padding: 0;
            }
            canvas#canvas {
                width:854px;
                height:480px;
                margin: 0;
                padding: 0;
            }
    body
        header
            h1 
        main
            div#call
                div#myStream
                    canvas#canvas()
                    form#screen(display="inline", width="50%", height="50%")  
                        video#video(autoplay, playsinline,width="100%", height="100%" )
                        
                    button#mute Mute
                    button#camera Turn display Off
                    input#scale(type="number", value=1)
                    input#titleCut(type="number", value=30)

                    select#gamepad
                    select#position
                        option(value="horizontal") Horizontal
                        option(value="vertical") Vertical
                    select#process
                    button#Fullscreen Fullscreen

        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/cli.js") 
